<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.choosetheme.ChooseThemeFragment">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="100dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="Choisissez les thÃ¨mes de publications que vous voudriez recevoir comme suggestion" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingVertical="-8dp"
                app:chipSpacingHorizontal="5dp"
                app:singleSelection="false"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="44dp">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:checkable="true"
                    style="@style/ThemeChipStyle"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    android:text="Musique" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:checkable="true"
                    style="@style/ThemeChipStyle"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    android:text="Nature" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:checkable="true"
                    style="@style/ThemeChipStyle"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    android:text="technologie" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:checkable="true"
                    style="@style/ThemeChipStyle"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    android:text="Cuisine" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:checkable="true"
                    style="@style/ThemeChipStyle"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    android:text="Art" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:checkable="true"
                    style="@style/ThemeChipStyle"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    android:text="Cultue" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:checkable="true"
                    style="@style/ThemeChipStyle"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    android:text="Voyage" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:checkable="true"
                    style="@style/ThemeChipStyle"
                    app:chipStrokeColor="@color/red"
                    app:chipStrokeWidth="1dp"
                    android:text="Photographie" />

            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="66dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:stateListAnimator="@null"
                android:textAllCaps="false"
                app:cornerRadius="36dp"
                android:text="Suivant" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIgnore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/white"
                android:text="Ignorer"
                android:textAllCaps="false"
                app:cornerRadius="36dp"
                app:elevation="0dp"
                android:textColor="@color/black"
                app:strokeColor="#000000"
                app:strokeWidth="0.2dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>
</layout>